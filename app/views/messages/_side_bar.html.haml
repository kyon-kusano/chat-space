.side
  .side-header
    .side-header__box
      .side-header__box__name
        = current_user.name
      .side-header__box__icons
        = link_to new_group_path, class: "side-header__box__icons__btn" do
          = icon('far','edit')
          %span<>
        = link_to edit_user_path(current_user), class: "side-header__box__icons__btn" do
          = icon('fas', 'cog')
  .side-group
    - current_user.groups.each do |group|
      .side-group__list
        = link_to group_messages_path(group) do
          .side-group__list__name
            = group.name
          .side-group__list__message
            = group.show_last_message